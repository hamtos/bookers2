<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th style="width: 20%"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <th>
      <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.get_book_image(80,80) %>
      <% end %>
      </th>
      <th>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      </th>
      <th><%= book.body %></th>
    </tr>
    <% end %>
  </tbody>
</table>