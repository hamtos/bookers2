<!--左側-->
<%= render 'users/info', user: @user %>

  <!--右側-->
<div>
  <h1>Book detail</h1>
  <%= image_tag @book.get_book_image(100,100) %>
  <%= link_to user_path(@user.id) do %>
    <%= @user.name %>
  <% end %>
  <%= link_to book_path(@book.id) do %>
    <%= @book.title %>
  <% end %>
  <%= @book.opinion %>
  <%= link_to "Edit", edit_book_path %>
  <%= link_to "Destroy", book_path, method: :delete %>
</div>
