<div class="container pt-3">
  <div class="row">

    <!--左側-->
    <div class="col-4">
      <%= render 'users/info', user: @user %>
    </div>

    <!--右側-->
    <div class="col-8">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <th style="width:20%">
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @book.get_book_image(100,100) %><br><%= @user.name %>
            <% end %>
          </th>
          <th>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
          </th>
          <th><%= @book.body %></th>

          <% if @book.user == current_user %>
            <th style="width:10%"><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></th>
            <th><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger" %></th>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>