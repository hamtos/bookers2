<div class="container-sm">
  <h1>User info</h1>

  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <%= form_with model: @user, method: :patch do |f| %>
    <div>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control mb-3" %>
    </div>

    <div>
      <%= f.label :profile_image, "Image" %><br>
      <%= f.file_field :profile_image, accept: "image/*", class: "mb-3" %>
    </div>

    <div>
      <%= f.label :introduction, "Introduction" %>
      <%= f.text_area :introduction, class: "form-control mb-3" %>
    </div>

    <div>
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    </div>

  <% end %>
</div>