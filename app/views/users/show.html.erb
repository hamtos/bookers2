<!--左側-->
<%= render 'info', user: @user %>

  <!--右側-->
<div>
  <h1>Books</h1>
  <p>Title</p>
  <p>Opinion</p>
  <% @books.each do |book| %>
    <%= image_tag book.get_book_image(100,100) %>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <%= book.opinion %>
  <% end %>
</div>

