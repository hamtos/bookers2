<div>
  <h1>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>name</p>
  <p><%= user.name %></P>
  <p>introduction</p>
  <p><%= user.introduction %></p>

  <%= link_to edit_user_path(user.id) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end%>

  <h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Opinion</p>
    <%= f.text_field :opinion %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>